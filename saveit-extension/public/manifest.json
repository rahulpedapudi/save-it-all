{
  "manifest_version": 3,
  "name": "Save It All Extension",
  "version": "1.0",
  "permissions": ["scripting", "activeTab", "tabs"],
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "all_frames": true
    }
  ],
  "host_permissions": ["<all_urls>"]
}
